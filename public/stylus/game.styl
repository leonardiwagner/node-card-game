#players
	background-color orange

.player
	width 250px
	height 100px
	background-color blue
	position absolute
#player1
	top 200px
	left 300px
#player2
	left 300px
#player3
	top 500px
#player4
	top 500px
	left 800px
.picture
	width 50px
	height 50px
	background-color red
	float left
.hand
	width 190px
	height 80px
	background-color green
	float left
	padding 10px;
	padding-right 0;
.card
	width 40px
	height 80px
	margin-right 10px
	background-color black
	float left
	cursor pointer 
	color white
.card:hover
	outline:3px solid red


#table
	width 200px
	height 200px
	background-color green
	position relative
	.card
		position absolute
	.card[data-player="1"]
		top 50%
		left 50%
	.card[data-player="2"]
		left 50%
	.card[data-player="3"]
		top 30%
	.card[data-player="4"]
		top 30%
		left 80%
